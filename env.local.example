# Example .env.local file for development
# Copy this file to .env.local and update with your actual values

# Solana Network Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Reown AppKit Configuration
NEXT_PUBLIC_PROJECT_ID=your_devnet_project_id_here

# Smart Contract Addresses (Devnet)
NEXT_PUBLIC_PRESALE_PROGRAM_ID=your_devnet_presale_program_id_here
NEXT_PUBLIC_STAKING_PROGRAM_ID=your_devnet_staking_program_id_here
NEXT_PUBLIC_TOKEN_MINT_ADDRESS=your_devnet_token_mint_address_here

# Liquidity Pool Addresses (Devnet)
NEXT_PUBLIC_LIQUIDITY_POOL_SOL=your_devnet_sol_liquidity_pool_here
NEXT_PUBLIC_LIQUIDITY_POOL_USDC=your_devnet_usdc_liquidity_pool_here

# Presale Configuration (Devnet)
NEXT_PUBLIC_PRESALE_HARD_CAP_SOL=10000
NEXT_PUBLIC_PRESALE_SOFT_CAP_SOL=1000
NEXT_PUBLIC_PRESALE_HARD_CAP_USDC=10000000
NEXT_PUBLIC_PRESALE_SOFT_CAP_USDC=1000000

# Token Configuration
NEXT_PUBLIC_TOKEN_DECIMALS=9
NEXT_PUBLIC_MIN_PRESALE_AMOUNT_SOL=0.1
NEXT_PUBLIC_MAX_PRESALE_AMOUNT_SOL=100
NEXT_PUBLIC_MIN_PRESALE_AMOUNT_USDC=10
NEXT_PUBLIC_MAX_PRESALE_AMOUNT_USDC=10000

# Development Flags
NEXT_PUBLIC_ENABLE_DEBUG_LOGS=true
NEXT_PUBLIC_ENABLE_SIMULATION_MODE=true
